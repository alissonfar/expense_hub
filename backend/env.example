# Personal Expense Hub - Backend Environment Variables
# Copy this file to .env and configure with your actual values

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/expense_hub_db"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"
BCRYPT_ROUNDS=12

# Server
PORT=3001
NODE_ENV=development

# CORS
FRONTEND_URL="http://localhost:3000"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Prisma
SHADOW_DATABASE_URL="postgresql://username:password@localhost:5432/expense_hub_shadow" 