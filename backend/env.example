# Personal Expense Hub - Backend Environment Variables (DEV)
# Copie este arquivo para .env para rodar em desenvolvimento

# Database
DATABASE_URL="postgresql://postgres:123456@localhost:5432/personal_expense_hub"

# Authentication
JWT_SECRET="dev-super-secret-key"
JWT_EXPIRES_IN="7d"
BCRYPT_ROUNDS=12

# Server
PORT=3001
NODE_ENV=development

# CORS
FRONTEND_URL="http://localhost:3000"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100# Refresh Token
REFRESH_SECRET="dev-refresh-secret"
REFRESH_EXPIRES_IN="30d"

# Prisma (apenas para dev/migrations)
SHADOW_DATABASE_URL="postgresql://postgres:123456@localhost:5432/personal_expense_hub_shadow"

# Email Configuration (Gmail SMTP)
GMAIL_USER="seu-email@gmail.com"
GMAIL_APP_PASSWORD="sua-senha-de-aplicativo"
EMAIL_FROM_NAME="Expense Hub"
ENABLE_EMAILS=true
EMAIL_RETRY_ATTEMPTS=3
EMAIL_RETRY_DELAY=1000
EMAIL_DAILY_LIMIT=450
EMAIL_HOURLY_LIMIT=90

# Test Email (para testes de conex√£o)
TEST_EMAIL="teste@exemplo.com"

